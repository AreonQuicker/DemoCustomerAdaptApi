{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "LOCAL": "Server=.; Database=DemoCustomer; Integrated Security=True;"
  },
  "GeneralConfig": {
    "UseInMemoryDatabase": true
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "Name": "MSSqlServer",
          "connectionString": "<connection string dynamically set in startup file>",
          "schemaName": "Logging",
          "tableName": "Logs",
          "autoCreateSqlTable": "true",
          "columnOptionsSection": {
            "addStandardColumns": [
              "LogEvent"
            ],
            "removeStandardColumns": [
              "Properties"
            ],
            "additionalColumns": [
              {
                "ColumnName": "AuthorizationToken",
                "DataType": "varchar",
                "DataLength": 8000,
                "AllowNull": true
              },
              {
                "ColumnName": "RequestPath",
                "DataType": "varchar",
                "DataLength": 500,
                "AllowNull": true
              },
              {
                "ColumnName": "LoggedInUser",
                "DataType": "varchar",
                "DataLength": 150,
                "AllowNull": true
              },
              {
                "ColumnName": "System",
                "DataType": "varchar",
                "DataLength": 50,
                "AllowNull": true
              },
              {
                "ColumnName": "Operation",
                "DataType": "varchar",
                "DataLength": 500,
                "AllowNull": true
              },
              {
                "ColumnName": "Key",
                "DataType": "varchar",
                "DataLength": 100,
                "AllowNull": true
              },
              {
                "ColumnName": "UserMessage",
                "DataType": "varchar",
                "DataLength": 1000,
                "AllowNull": true
              },
              {
                "ColumnName": "Status",
                "DataType": "varchar",
                "DataLength": 20,
                "AllowNull": true
              }
            ]
          }
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
